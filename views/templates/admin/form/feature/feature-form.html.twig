{% extends '@PrestaShop/Admin/layout.html.twig' %}


{% block content_header %}
  {% include '@Modules/va_bulkfeaturemanager/views/templates/admin/common/top_menu.html.twig' %}
{% endblock %}

{% block content %}
  {{ form_start(feature_form) }}
<div class="card">
  <h3 class="card-header">
    <i class="material-icons">add</i> {{ 'Add new feature'|trans({}, 'Modules.BoxManagement.Admin') }}
  </h3>
  <div class="card-body">
    <div class="form-wrapper">
      {{ form_widget(feature_form) }}
    </div>
  </div>
  <div class="card-footer">
    <div class="d-flex justify-content-end">
      <button class="btn btn-primary float-right" id="save-button">
        {{ 'Save'|trans({}, 'Admin.Actions') }}
      </button>
    </div>
  </div>
</div>
{{ form_end(feature_form) }}

{% endblock %}
